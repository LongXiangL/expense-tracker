<div class="row align-items-center ">
  <div class="col-auto me-auto">
    <a class="btn btn-outline-dark" href="/records/new">Create</a>
  </div>
  <div class="ml-auto">
    <form action="/">
      <div>
        <select class="form-select" aria-label="Default select example" name="categoryId" onchange="this.form.submit()">
          <option selected value="all">所有類別</option>
          {{#each categories}}
          {{#if ../categoryId}}
          <option value="{{this._id}}" {{#compare this._id ../categoryId}}selected{{/compare}}>{{this.name}}</option>
          {{else}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/if}}

          {{/each}}
        </select>
      </div>
    </form>
  </div>
</div>
<ul class="list-group">
  {{#each records}}
  <li class="list-group-item">
    <div class="row align-items-center">
      <div class="col-auto me-auto">
        <h4 style="display: inline; vertical-align: middle;">{{ this.name }}</h4>
        <p>
        <h6 style="display: inline; vertical-align: middle;">${{ this.amount }}</h6>
        </p>
        <p class="record-date text-muted mb-0">{{ this.date }}</p>
      </div>
      <div class="ml-auto ">
        <a class="btn btn-success " href="./records/{{ this._id }}/edit">edit</a>
        <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>